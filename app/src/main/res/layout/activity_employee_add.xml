<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:gravity="center|center_vertical"
            android:layout_gravity="center_vertical"
            >
            <com.expaorbit.interviewproject.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Employee Details Form"
                android:textColor="@color/colorMain"
                android:textSize="25sp"
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                />

            <EditText
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColorHint="@color/colorHintEditText"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@drawable/edittext_login"
                android:id="@+id/edittext_emp_id"
                android:hint="Employee ID" />
            <EditText
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColorHint="#ccc"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@drawable/edittext_login"
                android:inputType="textPersonName"
                android:id="@+id/edittext_emp_name"
                android:hint="Name" />
            <EditText
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColorHint="#ccc"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:id="@+id/edittext_emp_email"
                android:padding="15dp"
                android:background="@drawable/edittext_login"
                android:hint="Email address" />

                <EditText
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="15sp"
                    android:textColorHint="#ccc"
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="15dp"
                    android:background="@drawable/edittext_login"
                    android:id="@+id/edittext_emp_mobile_no"
                    android:hint="Mobile number" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:textSize="15sp"
                android:textColor="#fff"
                android:background="@drawable/btn_login"
                android:padding="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/btn_save_emp_details"/>
        </LinearLayout>



</ScrollView>